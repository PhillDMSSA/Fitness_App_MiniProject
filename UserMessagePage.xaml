<Page x:Class="Fitness_App.UserMessagePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Fitness_App"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserMessagePage">

    <Grid>
        <ListBox x:Name="MessageListBox" Width="400" Height="250" VerticalAlignment="Top" Margin="10"/>
        <TextBox x:Name="NewMessageTextBox" Width="400" Height="50" VerticalAlignment="Bottom" Margin="10"/>
        <Button Content="Send Message" Width="100" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10" Click="SendMessageButton_Click"/>
    </Grid>
</Page>
