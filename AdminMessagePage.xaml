<Page x:Class="Fitness_App.AdminMessagePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Fitness_App"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminMessagePage">

    <Grid>
        <ListBox x:Name="MessageListBox" 
                 Margin="10,10,10,50"/>

        <TextBox x:Name="NewMessageTextBox" 
                 Margin="10,0,100,10" 
                 Height="30" 
                 VerticalAlignment="Bottom"/>

        <Button x:Name="SendMessageButton" 
                Content="Send" 
                Margin="0,0,10,10" 
                Width="80" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Bottom"
                Click="SendMessageButton_Click"/>
    </Grid>
</Page>
