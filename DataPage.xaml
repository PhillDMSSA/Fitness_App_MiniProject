<Page x:Class="Fitness_App.DataPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Fitness_App"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DataPage">

    <Grid Background="LightBlue" >
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <!-- Fill the available space -->
            <RowDefinition Height="Auto" />
            <!-- Fixed height for bottom area -->
        </Grid.RowDefinitions>

        <DataGrid x:Name="DataGridDisplay" AutoGenerateColumns="True"
              Margin="64,60,64,40" />

        

        <!-- Back Button -->
        <Button Content="Back" Width="65" Height="25" Click="BackButtonDisplayPage_Click" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="1" Margin="12,0,0,0"/>
    </Grid>
</Page>
